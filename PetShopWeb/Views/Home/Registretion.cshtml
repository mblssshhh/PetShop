<body>
    <section class="Table">

        <aside class="Photo">
            <img src="image/free-icon-user-profile-2734847 1 (1).png" class="images"></img>
        </aside>
        <ul class=register>
            <div class="input-box">
                <input type="name" placeholder="Имя">
            </div>
            <div class="input-box">
                <input type="second_name" placeholder="Фамилия">
            </div>
            <div class="input-box">
                <input type="last_name" placeholder="Отчество">
            </div>
            <div class="input-box">
                <input type="number" placeholder="Телефон">
            </div>
            <div class="input-box">
                <input type="email" placeholder="Email">
            </div>
            <div class="input-box">
                <input type="password" placeholder="Пароль">
            </div>
            <div class="buttons">
                <button onclick="validate()"><p>Зарегистрироваться</p></button>
            </div>
            <div class="href">
                <a asp-controller="Home" asp-action="Login">Уже есть аккаунт?</a>
            </div>
