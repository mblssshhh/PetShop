@model RegisterViewModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" context="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> ANI MALL</title>
    <link rel="stylesheet" href="header.css">
    <link rel="stylesheet" href="main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,900;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <form method="post" asp-controller="Home" asp-action="Register">
        <section class="Table">
            <aside class="Photo">
                <img src="~/css/Img/83e20b788bd1c17ae8d987c828b7ded9-PhotoRoom 1.png" class="images" />
            </aside>
            <ul class="register">
                <div class="input-box">
                    <input type="text" name="Name" placeholder="Имя" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input type="text" name="Surname" placeholder="Фамилия" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input type="text" name="Patronymic" placeholder="Отчество" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input type="text" name="Phone" placeholder="+7" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input type="text" name="Email" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input type="password" name="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="buttons">
                    <button class="button2" type="submit">Зарегистрироваться</button>
                </div>
                <div class="href">
                    <a asp-controller="Home" asp-action="Login">Уже есть аккаунт?</a>
                </div>
            </ul>
        </section>
    </form>
</body>
</html>