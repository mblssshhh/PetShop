                <li><a asp-controller="Home" asp-action="Contacts">Контакты</a></li>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Home" asp-action="Basket" class="icon"> <img src="~/css/Img/free-icon-shopping-bag-4903482 1.png" class="images"></img></a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Registretion" class="icon"> <img src="~/css/Img/free-icon-shopping-bag-4903482 1.png" class="images"></img></a>
                    }
                    if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Account" class="icon"><img src="~/css/Img/free-icon-user-profile-2734847 1.png" class="images"></img></a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Registretion" class="icon"><img src="~/css/Img/free-icon-user-profile-2734847 1.png" class="images"></img></a>
                    }
                }
            </ul>
        </nav>
    </header>
    @RenderBody()


            <footer class="footer_wrap footer">
